@model Web.Data.Model.LoginViewModel

    <div class="simple-login-container">
        <h2>Login Form</h2>
        <form method="post" asp-controller="account" asp-action="login">
            @Html.ValidationMessage("invalid_account", new { @class = "text-danger mb-10" })
            <div class="row">
                <div class="col-md-12 form-group">
                    <input type="text" class="form-control" name="Email" placeholder="Email">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <input type="password" placeholder="Enter your Password" name="Password" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <input type="submit" class="btn btn-block btn-login" placeholder="Đăng nhập">
                </div>
            </div>
            <a class="nav-link text-test" asp-area="" asp-controller="Account" asp-action="Register">Tạo tài khoản mới</a>
